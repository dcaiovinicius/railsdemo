<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">List of all friends</h1>
  </div>
</div>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First name</th>
      <th scope="col">E-mail</th>
      <th scope="col">Phone</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <th scope="row"><%= friend.id %></th>
        <td><%= friend.first_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to "Show", friend_url(friend), class: 'btn btn-primary' %></td>
        <td><%= link_to "Edit", edit_friend_url(friend), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New friend', new_friend_url, class: 'btn btn-primary btn-lg' %>
